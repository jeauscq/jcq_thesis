<?xml version="1.0"?>
<robot name="2dof_planar_robot">

  <link name="world"/> <!-- A fixed, referenced link representing the global frame, it is used because the joint base must be defined as fixed -->

  <link name="base_link">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/> <!-- Positions the visual 5 cm above the link frame-->
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <!-- <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision> -->
  </link>

  <link name="link1">
    <inertial>
      <mass value="1"/>
      <origin xyz="1 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00041666666666666675" ixy="0" ixz="0" iyy="0.08354166666666665" iyz="0" izz="0.08354166666666665"/>
    </inertial>
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 0.05 0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 0.05 0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="link2">
    <inertial>
      <mass value="1"/>
      <origin xyz="1 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00041666666666666675" ixy="0" ixz="0" iyy="0.08354166666666665" iyz="0" izz="0.08354166666666665"/>
    </inertial>
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 0.05 0.05"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 0.05 0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="ee">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0"/>  <!-- basically negligible -->
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="1000" velocity="3000.14" />
    <dynamics damping="0.0001" />
  </joint>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="1 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="1000" velocity="3000.14" />
    <dynamics damping="0.0001" /> 
  </joint>
  
  <joint name="joint3" type="fixed">
    <parent link="link2"/>
    <child link="ee"/>
    <origin xyz="1 0 0" rpy="0 0 0"/>
  </joint>

</robot>

  
